<%= form_with model: @task do |f| %>
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control mb-3" %>
  <%= f.label :details, class: "form-label" %>
  <%= f.text_field :details, class: "form-control mb-3" %>
  <% if @task.persisted? %>
    <%= f.label :completed, class: "form-label" %>
    <%= f.check_box :completed, class: "form-check-input mb-3" %>
  <% end %>
  <div>
    <%= f.submit class: "btn btn-primary mb-3" %>
    <button class="btn btn-light border border-secondary-subtle mb-3">
      <%= link_to "Cancel", tasks_path %>
    </button>
  </div>
<% end %>
