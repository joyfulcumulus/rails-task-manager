<div class="wrapper">
  <div class="border border-secondary w-50 p-3">
    <h1 class="text-center">My Tasks</h1>
    <ul class="list-group my-3">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <input type="checkbox"
            <%= "checked" if task.completed %>
            disabled
          >
          <%= link_to task.title, task_path(task) %>
          <%= link_to task_path(task),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-regular fa-trash-can"></i>
          <% end %>
        </li>
      <% end %>
    </ul>

    <button class="btn btn-warning border border-secondary-subtle"><%= link_to "Add a new task", tasks_new_path %></button>
  </div>
</div>

<%# task_path(task): the task refers to the specific task in the each-do loop %>
